---
const { location, text } = Astro.props;
---
<style>
    :root {
        --page-bg: #3e3642;
        --page-bg-lighter: #695970;
    }

    a {
        padding-left: 0.4rem;
        padding-right: 0.4rem;
        margin-left: 0.1rem;
        margin-right: 0.1rem;

        width: 7rem;
        height: 2.5rem;
        border-top-left-radius: 0.5rem;
        border-top-right-radius: 0.5rem;

        display: flex;
        justify-content:center;
        align-items: center;

        font-weight: bold;
        color: #f5f5f5;
        background: #3e3642;
        text-decoration: none;
    }
    a:hover {
        transition: 0.2s;
        background: linear-gradient(180deg, #cbabee 0%, var(--page-bg) 100%);
    }
    a:active {
        transition: 0.1s;
        background: linear-gradient(180deg, #e0bb65 0%, var(--page-bg) 100%);
    }
    .currentPage::after {
        content: "";
        background: #cbabee;
        border-radius: 50px;
        width: 2rem;
        height: 0.3rem;
        position: absolute;
        bottom: -0.2rem;
    }
    .currentPage:hover::after {
        width: 3rem;
        transition: all .4s;
    }

</style>

<a class="headerButton" href={location}>{text}</a>