---
const { link, buttonColor, buttonHover } = Astro.props;
---
<style define:vars={{ buttonColor, buttonHover }} >
    a {
        text-decoration: none;
        width: 100%;
    }
	div {
		position: relative;
		overflow: hidden;

        display: flex;
		flex-direction: column;
        justify-content: center;
        align-items: center;

        width: 100%;
        height: 100%;

		border-radius: 0.75rem;
		background: var(--buttonColor);

		transition: all 0.1s ease-in-out;
	}
	p {
		margin: 0;
        color: #f5f5f5;
	}
    a:hover > div {
		width: calc(100% + 0.3rem);
		height: calc(100% + 0.3rem);
		margin: -0.15rem;
        background-color: var(--buttonHover);
    }
    a:active > div {
		width: calc(100% - 0.5rem);
		height: calc(100% - 0.5rem);
		margin: 0.25rem;
    }
</style>

<a href={link}>
	<div>
		<slot />
	</div>
</a>