---
const { platform, username } = Astro.props;
---
<style>
    a {
        margin: 1rem 0;
        width: 100%;
        height: 3rem;
        border-radius: 0.5rem;

        display: flex;
        justify-content: center;
        align-items: center;

        font-size: 1.5rem;
        font-weight: bold;
        color: #f5f5f5;
        background: #cbabee;
        text-decoration: none;
    }
    a:hover {
        transition: 0.2s;
        background-color: #856c9f;
    }
    a:active {
        transition: 0.1s;
        background-color: #e0bb65;
    }
</style>

<a href={`https://www.${platform}.com/${username}`}>{platform}</a>